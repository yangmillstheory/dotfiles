[module/spacer]
type = custom/text
content = ""
content-foreground = ${colors.foreground-alt}

[module/weather]
type = custom/script
exec = ~/.config/polybar/weather.sh
label-font = 3
format-underline = ${colors.nord9}
interval = 600

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.nord14}
format-underline = ${colors.nord14}
format = <label>
exec = python ~/.config/polybar/spotify -f '{artist}: {song} {play_pause}' -p ','

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

