[colors]
background = #343842
foreground = #b3c1e0
foreground-alt = #646d82
primary = #2f343f
secondary = #676e7d
alert = #e53935

[bar/example]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
radius = 0
padding = 0
fixed-center = false
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Hack:style=Regular:size=12;1
font-1 = FontAwesome:style=Regular:size=13;2
font-2 = Weather Icons:size=12;1
font-3 = FontAwesome:style=Regular:size=13;2

modules-left = i3
modules-center = xwindow
modules-right = spotify spacer alsa spacer wlan spacer battery spacer weather spacer date

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 0

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.foreground}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
; label-visible-underline = ${self.label-focused-underline}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-10 = 10;
ws-icon-default = 

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.foreground}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.foreground}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-packetloss = <animation-packetloss> <label-connected>
format-connected-underline = ${colors.foreground}
label-connected =  %essid%

label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.alert}
format-disconnected-underline = ${colors.alert}

[module/date]
type = internal/date
interval = 5

date =  %a %b %d
date-alt = %Y-%m-%d

time =   %I:%M %p (%Z)
time-alt =   %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.foreground}

label = %date% %time%

[module/alsa]
type = internal/alsa
format-volume-underline = ${colors.foreground}

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted =  (muted)
label-muted-foreground = ${colors.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.foreground}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${colors.foreground}

format-full-prefix = " "
format-full-underline = ${colors.foreground}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-framerate = 1000

[module/spacer]
type = custom/text
content = ""
content-foreground = ${colors.foreground-alt}

[module/weather]
type = custom/script
exec = ~/.config/polybar/weather.sh
label-font = 3
format-underline = ${colors.foreground}
interval = 600

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/spotify -f '{artist}: {song} {play_pause}' -p ','
format-underline = ${colors.foreground}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

