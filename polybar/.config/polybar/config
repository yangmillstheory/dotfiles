[bar/example]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
radius = 0
padding = 0
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Hack:style=Regular:size=11;1
font-1 = FontAwesome:style=Regular:size=13;2
font-2 = Weather Icons:size=12;1
font-3 = FontAwesome:style=Regular:size=13;2

modules-left = i3
modules-center = xwindow
modules-right = spotify spacer alsa spacer wlan spacer weather spacer date spacer battery

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
format-background = ${colors.nord14}
format-foreground = ${colors.nord3}
format-padding = 4

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 0

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.nord3}
label-focused-background = ${colors.nord14}
label-focused-underline = ${colors.nord3}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-10 = 10;
ws-icon-default = 

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-packetloss = <animation-packetloss> <label-connected>
format-connected-underline = ${colors.nord7}
label-connected =   %essid%

label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.alert}
format-disconnected-underline = ${colors.alert}

[module/date]
type = internal/date
interval = 5

date =  %a %b %d
date-alt = %Y-%m-%d

time =   %I:%M %p (%Z)
time-alt =   %H:%M:%S

format-underline = ${colors.nord15}

label = %date% %time%

[module/alsa]
type = internal/alsa
format-volume-underline = ${colors.nord13}

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted =  (muted)
label-muted-foreground = ${colors.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.nord13}
format-charging-foreground = ${colors.nord13}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${colors.nord12}
format-discharging-foreground = ${colors.nord12}

format-full-prefix = " "
format-full-underline = ${colors.nord14}
format-full-foreground = ${colors.nord14}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.nord12}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
